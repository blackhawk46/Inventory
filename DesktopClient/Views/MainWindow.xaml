<mah:MetroWindow x:Class="DesktopClient.Views.MainWindow"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        GlowBrush="RoyalBlue"
        ResizeMode="CanResizeWithGrip"
        TitleCharacterCasing="Normal"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainView}"
        Title="Инвентаризация ФНС">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Command="{Binding ShowInformation}" ToolTip="Информация">
                <Button.Content>
                    <iconPacks:PackIconEntypo
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Kind="Info"/>
                </Button.Content>
            </Button>
            <Button Command="{Binding ShowSettings}" Visibility="{Binding SettingsView}" ToolTip="Настройки">
                <Button.Content>
                    <iconPacks:PackIconEntypo
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Kind="Cog"/>
                </Button.Content>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>

            <mah:Flyout
                Header="Информация"
                FontFamily="Times New Roman" 
                FontStyle="Italic"
                IsModal="True"
                Width="300"
                Position="Left"
                Theme="Adapt"
                IsOpen="{Binding Information}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                           TextWrapping="Wrap"
                           Margin="12 8 0 0"
                           FontSize="20"
                           Style="{StaticResource MaterialDesignBody1TextBlock}">
                        Разработано специально
                        <LineBreak/>
                        для ФНС
                        </TextBlock>
                        <TextBlock
                        Margin="0 12 0 0"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Style="{StaticResource MaterialDesignBody1TextBlock}">
                        Телефон поддержки
                        </TextBlock>
                        <Label HorizontalAlignment="Center" Margin="0 2 0 0">
                            <Label.Content>
                                <iconPacks:PackIconMaterial
                                Width="24"
                                Height="24"
                                Kind="Phone"/>
                            </Label.Content>
                        </Label>
                        <TextBlock
                        HorizontalAlignment="Center"
                        TextWrapping="Wrap"
                        FontSize="20"
                        Margin="0 2 0 0"
                        FontStyle="Oblique"
                        Foreground="LightSeaGreen"
                        Style="{StaticResource MaterialDesignBody1TextBlock}">
                        8(3012)44-06-08
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </mah:Flyout>

            <mah:Flyout
                Header="Настройки"
                FontFamily="Times New Roman" 
                FontStyle="Italic"
                IsModal="True"
                Width="300"
                Position="Left"
                Theme="Adapt"
                IsOpen="{Binding Settings}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                           TextWrapping="Wrap"
                           Margin="12"
                           FontSize="20"
                           Style="{StaticResource MaterialDesignBody1TextBlock}">
                        Адрес сервера:
                        </TextBlock>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="12"
                            FontSize="20"
                            Width="300"
                            Text="{Binding ServerAddress, Mode=TwoWay}"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Left"/>
                        <TextBlock
                           TextWrapping="Wrap"
                           Margin="12"
                           FontSize="20"
                           Style="{StaticResource MaterialDesignBody1TextBlock}">
                        База данных:
                        </TextBlock>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="12"
                            FontSize="20"
                            Width="300"
                            Text="{Binding DbName, Mode=TwoWay}"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </mah:Flyout>

            <mah:Flyout
                Header="Добавить сотрудника"
